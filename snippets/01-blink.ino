// Функция, в которой выполняется
// инициализация и настройка.

void setup(){

// Настраиваем 13 цифровой пин
// как выход.

  pinMode(13,OUTPUT);

}

// Бесконечный цикл.

void loop(){

// Зажигаем светодиод.

  digitalWrite(13,HIGH);

// Ждем 1000 миллисекунд.

  delay(1000);

// Гасим светодиод.

  digitalWrite(13,LOW);

// Ждем 1000 миллисекунд.

  delay(1000);

}
